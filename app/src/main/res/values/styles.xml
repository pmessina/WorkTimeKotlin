<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextTheme" parent="@android:style/Widget.DeviceDefault.Light.Spinner" />

    <style name="childPadding">
        <item name="android:padding">2px</item>
    </style>

    <style name="listViewPadding">
        <item name="android:padding">10px</item>
    </style>

    <style name="imageButtonStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/clock_icon</item>
        <item name="android:textSize">12sp</item>
        <item name="android:onClick">onClick</item>
    </style>


</resources>
